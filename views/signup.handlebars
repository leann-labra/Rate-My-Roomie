 <div class="content">
        <h2 class="content-head is-center">Sign Up Here!</h2>
        <div class="pure-g">
            <div class="l-box-lrg pure-u-1 pure-u-md-2-5">
                <form id="signup-form" class="pure-form pure-form-stacked">
                    <fieldset>

                        <label for="name">Username</label>
                        <input id="name" type="text"  placeholder="Your Name">

                   



                        <label for="email">Your Email</label>
                        <input id="email" type="email"  placeholder="Your Email">

                        <label for="password">Your Password</label>
                        <input id="password" type="password" style="width: 600px" placeholder="Your Password">

                        <button type="submit" class="pure-button">Sign Up</button>
                        <a href="/login" class="pure-button">Login</a>
                    </fieldset>
               {{!-- image that is at the bottom on sign up form --}}
                    <img class="signing-upimg" src="/images/bunkbed.jpg" alt="two students in a dorm room">
                </form>
            </div>
           

          
<script src="/js/signup.js"></script>

        </div>