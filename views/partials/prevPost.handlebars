
                <!-- A single blog post -->
                <section id="preview-post" class="post-card postContainer">
                    <header class="post-header">
                        <h1>{{title}}</h1>
                        <h2>{{rating}}/5</h2>
                    </header>

                    <div class="post-description">
                        <ul class="post-preview">
                            <li>{{first_name}} {{last_name}}</li>
                            <li>{{age}}</li>
                            <li>{{city}}, {{county}}</li>
                             <li>{{lease_length}}</li>
                        </ul>
                    </div>
                    
                    <p class="post-subtitle">
                        Post made by: {{user.name}} on {{{format_date}}}
                    <p>
                </section>
    <button id="deleteBtn" class="button-secondary pure-button">DELETE POST</button>
    <script src="./js/newPost.js"></script>